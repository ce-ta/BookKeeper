<head>
  <meta charset="UTF-8">
  <title>ログイン</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <%= stylesheet_link_tag 'session_new', media: 'all', 'data-turbolinks-track': 'reload' %>
</head>
<body>

<div class="login-container">
    <div class="form-container">
      <div class="form_heading">ログイン</div>  
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <p>メールアドレス</p>
        <%= f.email_field :email, id: "email", value: @input_email %>

        <p>パスワード</p>
        <%= f.password_field :password, id: "password" %>

        <%= f.submit "ログイン" %>
      <% end %>
    </div>
</div>